{
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/../../tsconfig.json"
    }
  },
  "setupFilesAfterEnv": ["./setup.js"],
  "roots": [
    "<rootDir>../../src"
  ],
  "moduleNameMapper": {
    "declarapi$": "<rootDir>/../../../src"
  },
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "collectCoverageFrom": [
    "**/*.{js,jsx,ts,tsx}",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "resetModules": true,
  "clearMocks": true,
  "testTimeout": 300000
}
