{
  "name": "declarapi",
  "version": "0.8.4",
  "description": "Declarative API generation",
  "keywords": [
    "api",
    "declarative",
    "type",
    "typescript",
    "json",
    "generation"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "prepublish": "tsc",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmagyar/declarapi.git"
  },
  "bin": "./dist/bin/generate.js",
  "scripts": {
    "build": "tsc && chmod +x ./dist/bin/generate.js",
    "watch": "tsc --watch",
    "clean": "rm -rf ./dist && rm -rf ./test/*.ts",
    "test": "npm run standard && jest",
    "jest": "jest",
    "prepare": "npm run build",
    "standard": "standardx src/**/*.ts",
    "standard:fix": "standardx --fix src/**/*.ts",
    "standard:fix2": "standardx --fix src/**/example-server.ts",
    "test:coverage": "npm run standard && jest --coverage=true  --no-cache",
    "test:watch": "jest --watch",
    "test:dev": "npm run standard:fix && jest --no-cache --coverage --detectOpenHandles --runInBand",
    "test:clearCache": "jest --clearCache",
    "test:integration": "npm run test:integration:elasticsearch && npm run test:integration:kv",
    "test:integration:dev": "npm run test:integration:elasticsearch:dev && npm run test:integration:kv",
    "test:integration:elasticsearch": "jest --no-cache --verbose --config integrationTests/setup/elastic/jest.json --colors --coverage=true",
    "test:integration:elasticsearch:dev": "export ELASTIC_KEEP=\"true\"; npm run test:integration; unset ELASTIC_KEEP",
    "test:integration:kv": "jest --no-cache --verbose --config integrationTests/setup/kv/jest.json --colors --coverage=true",
    "generate": "node ./dist/bin/generate.js",
    "generate:dev": "npm run build && npm run generate"
  },
  "standardx": {
    "env": [
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "jest": {
    "setupFiles": [],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!./src/bin/**",
      "!./src/index.ts",
      "!./src/dataConnector/**",
      "!./src/RequestHandlingError.ts",
      "!**/vendor/**"
    ],
    "resetModules": true,
    "clearMocks": true
  },
  "author": "mmagyar.com",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.26",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "dotenv": "^8.2.0",
    "jest": "^26.1.0",
    "standardx": "^5.0.0",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "yaschva": "^1.4.0"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.8.0",
    "@types/commander": "^2.12.2",
    "@types/fuse": "^2.6.0",
    "@types/uuid": "^8.0.0",
    "ajv": "^6.12.3",
    "commander": "^6.0.0",
    "fuse.js": "^6.4.1",
    "microtil": "^1.1.4",
    "uuid": "^8.2.0",
    "yaschva": "^1.4.0"
  }
}
