{
  "name": "declapi",
  "version": "0.1.0",
  "description": "Declarative API generation",
  "keywords": [
    "api",
    "declarative",
    "type",
    "typescript",
    "json",
    "generation"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "prepublish": "tsc",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmagyar/declapi.git"
  },
  "scripts": {
    "build": "tsc",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "test": "npm run standard && jest",
    "standard": "standardx **/*.ts",
    "standard:fix": "standardx --fix **/*.ts",
    "test:coverage": "npm run standard && jest --coverage",
    "test:watch": "jest --watch"
  },
  "standardx": {
    "env": [
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "author": "mmagyar.com",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "jest": "^25.2.3",
    "standardx": "^5.0.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
