{
  "name": "declarapi",
  "version": "0.3.0",
  "description": "Declarative API generation",
  "keywords": [
    "api",
    "declarative",
    "type",
    "typescript",
    "json",
    "generation"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "prepublish": "tsc",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmagyar/declarapi.git"
  },
  "bin": "./dist/bin/generate.js",
  "scripts": {
    "build": "tsc && chmod +x ./dist/bin/generate.js",
    "watch": "tsc --watch",
    "test": "npm run standard && jest",
    "jest": "jest",
    "standard": "standardx src/**/*.ts",
    "standard:fix": "standardx --fix src/**/*.ts",
    "standard:fix2": "standardx --fix src/**/example-server.ts",
    "test:coverage": "npm run standard && jest --coverage=true  --no-cache",
    "test:watch": "jest --watch",
    "test:dev": "npm run standard:fix && jest --coverage",
    "test:clearCache": "jest --clearCache",
    "generate": "node ./dist/bin/generate.js",
    "generate:dev": "npm run build && npm run generate"
  },
  "standardx": {
    "env": [
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!./src/bin/**",
      "!**/vendor/**"
    ]
  },
  "author": "mmagyar.com",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "jest": "^26.0.1",
    "standardx": "^5.0.0",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {
    "yaschva": "^1.2.9"
  },
  "dependencies": {
    "@types/commander": "^2.12.2",
    "ajv": "^6.12.2",
    "commander": "^5.1.0",
    "microtil": "^1.1.4",
    "yaschva": "^1.2.9"
  }
}
